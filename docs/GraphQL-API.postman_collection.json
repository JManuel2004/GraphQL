			"item": [
				{
					"name": "Initial data",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.seed) {",
									"        pm.test(\"Seed ejecutado correctamente\", function () {",
									"            pm.expect(response.data.seed).to.have.property('message');",
									"            pm.expect(response.data.seed).to.have.property('data');",
									"            pm.expect(response.data.seed.data.users).to.be.at.least(1);",
									"        });",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "query Seed {\n  seed {\n    message\n    data {\n      users\n      projects\n      tasks\n    }\n  }\n}"
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": [
								"{{base_url}}"
